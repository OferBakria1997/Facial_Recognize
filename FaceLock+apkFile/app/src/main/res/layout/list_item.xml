<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom = "5dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="Preview Thumbnail"
        app:srcCompat="@android:drawable/btn_dialog"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/dateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_toEndOf="@+id/thumbnail" />

    <TextView
        android:id="@+id/tagsSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dateTitle"
        android:textStyle="italic"
        android:textSize="14sp"
        android:layout_below="@+id/dateTitle"
        android:layout_alignLeft="@+id/dateTitle"
        android:layout_alignStart="@+id/dateTitle" />
</RelativeLayout>